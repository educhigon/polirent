<h1>Welcome to my page</h1>
<h2><%= @politician.name %></h2>
<% if @politician.image_url.present? %>
  <img src="<%= @politician.image_url %>" alt="<%= politician.name %>" width="50" height="60">
<% else %>
  <%= cl_image_tag(@politician.photo.key, width: 50, height: 60, crop: :fill) %>
<% end %>
<p><%= @politician.location %></p>
<p><%= @politician.cost %></p>
<p><%= @politician.description %></p>

  <%= link_to politicians_path do %>
    <i class="fa-solid fa-arrow-rotate-left"></i> Back to list
  <% end %>
</div>



<%= button_to "Book now!", book_path(@politician.id), class: "btn btn-danger" %>
