<div class="container">
  <h1>My Politicians 🤝💸</h1>
  <% @politicians.each do |poli| %>
    <div class="card-category">
      <h2><%= link_to poli.name, politician_path(poli.id) %></h2>
      <p><%= poli.location %></p>
      <p><%= poli.cost %></p>
      <p><%= poli.description %></p>
  	</div>
  <% end %>
</div>
