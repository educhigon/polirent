<div class="container">
<br>
<h1 class="text-center">MY BOOKING PAGE</h1>


 <div class="cards row flex-wrap">
  <% @bookings.each do |booking| %>
  <div class="card-product border">
    <div class="image_my_bookings">
      <%= render partial: 'politicians/image_handling_2', locals: { politician: booking.politician } %>
    </div>


    <div class="card-product-infos ">
      <h2><%= booking.politician.name %></h2>
      <p><%= booking.politician.description[0..100]... %></p>
      <p>Location: <%= booking.politician.location %></p>
      <p>Date: <%= booking.start_date %> - <%= booking.end_date %></p>
      <br>
      <div class="d-flex justify-content-between">
        <h5>Cost: <%= booking.politician.cost %> â‚¬/night</h5>
        <% if booking.status.upcase == "PENDING" %>
          <h6 style="color:orange"><strong><%= booking.status.upcase %></strong></h6>
        <% elsif booking.status.upcase == "REJECTED" %>
          <h6 style="color:red"><strong><%= booking.status.upcase %></strong></h6>
        <% else %>
          <h6 style="color:green"><strong><%= booking.status.upcase %></strong></h6>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>
</div>
